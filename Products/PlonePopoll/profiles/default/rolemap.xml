<?xml version="1.0"?>
<rolemap>
  <permissions>
    <permission name="Popoll: Add polls"
                acquire="True">
      <role name="Contributor"/>
      <role name="Manager"/>
      <role name="Owner"/>
    </permission>

    <permission name="Popoll: Edit polls"
		acquire="True">
      <role name="Manager"/>
      <role name="Owner"/>
    </permission>

    <permission name="Popoll: Vote"
                acquire="True">
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Anonymous"/>
      <role name="Member"/>
      <role name="Contributor"/>
    </permission>
  </permissions>
</rolemap>
